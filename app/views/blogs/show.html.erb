<h1>Blog Detail</h1>

<p>Content: <%= @blog.content %></p>

<% unless @blog.user == current_user %>
  <% if @favorite.present? %>
    <%= link_to 'Favorites Cancel', favorite_path(id: @favorite.id), method: :delete, class: 'btn btn-danger' %>
  <% else %>
    <%= link_to 'To Favorites', favorites_path(blog_id: @blog.id), method: :post, class: 'btn btn-primary' %>
  <% end %>
<% end %>

<%= link_to "Back Index", blogs_path, class: 'btn btn-primary' %>